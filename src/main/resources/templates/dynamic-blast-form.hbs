<form id="dynamic-blast">
    <h3>New Blast</h3>
    <br />
    <b>Distribution List:</b>
    <select name="distributionList">
        <option value="none" selected="true">None</option>
        {{#each distributionLists}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br />

    <b>Additional Recipients:</b>
    <person-selector name="recipients" />

    <b>Message:</b>
    <textarea name="template" placeholder="Use \{{mention}} to place an @mention to the recipient"></textarea>
    <checkbox name="track-urls" value="true" checked="true">Track URLs</checkbox>
    <br />
    <button name="preview-blast" type="action">Preview Blast</button>
    <button name="home" type="action">Back</button>
</form>
